<h1>New text module</h1>

<% form_for(@text_module,:html=>{:class=>"standard"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text_content %><br/>
    <%= f.text_area :text_content, :rows=>15, :cols=>50 %>
  </p>
    <%= f.hidden_field :controller,:value=>params[:src_controller] %>
    <%= f.hidden_field :action,:value=>params[:src_action] %>
    <%= f.hidden_field :key,:value=>params[:key] %>
	<input type="hidden" name="back_to" value="<%=request.referer %>"  />
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', text_modules_path %>
