<h1>New comment</h1>


<% form_for(@comment) do |f| %>

	<%= f.hidden_field :campaign_id, :value => params[:campaign_id] %>

  	<%= f.error_messages %>

  	<p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  	</p>

  	<p>
    <%= f.submit "Create" %>
  	</p>

<% end %>

