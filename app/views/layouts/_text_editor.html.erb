<script type="text/javascript" src="/javascripts/tiny_mce/tiny_mce.js"></script>
<script type="text/javascript">
	default_options = {
		mode : "textareas",
		theme : "advanced",
		skin : "o2k7",
		cleanup: true,
		content_css : "/stylesheets/main.css?" + new Date().getTime(),
		theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,formatselect,fontselect,fontsizeselect",
		theme_advanced_buttons2 : "bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,code,|,insertdate,inserttime,preview,|,forecolor,backcolor",
		theme_advanced_buttons3 : "",
		theme_advanced_toolbar_location : "top",
		theme_advanced_toolbar_align : "left",
		plugins: "autolink",
		editor_deselector: "mceNoEditor"
	};
	
	var render_editor = function() {
		tinyMCE.init(default_options);
	}
	
	var render_specific_editor = function(class_name, width, height) {
		var my_options = default_options;
		
		if (!class_name)	class_name = "mceEditor";
		if (width)			my_options["width"] = width;
		if (height)			my_options["height"] = height;
		
		my_options["mode"] = "specific_textareas",
		my_options["editor_selector"] = class_name;
		tinyMCE.init(my_options);
	}
	
	var render_cms_editor = function() {
		render_specific_editor("cms", '800px', '300px');
	}
	
	var render_small_editor = function() {
		var my_options = default_options;
		my_options["width"] = "310px";
		my_options["height"] = "200px";
		my_options["theme_advanced_buttons1"] = "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,forecolor,backcolor";
		my_options["theme_advanced_buttons2"] = "bullist,numlist,|,undo,redo,|,link,unlink,anchor,image,code,|,insertdate,inserttime,preview";
		my_options["theme_advanced_buttons3"] = "formatselect,fontselect,fontsizeselect";
		tinyMCE.init(my_options);
	}
</script>
