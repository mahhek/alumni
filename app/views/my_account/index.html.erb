			<h1>Your Account &amp; Profile</h1>
		</div>
		<div class="bottom_left"><div class="bottom_right"></div></div>
	</div>

	<div id="left">

		<div id="profile_pic" class="bgstyle7">
			<div class="top_left"><div class="top_right"></div></div>
			<div class="content">
			<h2>My Profile Picture</h2>
			<div>
				<%= link_to load_small(@user), user_path(@user) %> 
