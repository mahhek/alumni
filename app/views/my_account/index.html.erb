					<%= link_to "View My Profile", user_path(@user) %> <br />
					Your profile allows others to learn more about you
				</li>
			</ul>
			</div>
			<div class="bottom_left"><div class="bottom_right"></div></div>
		</div>

	</div>
	<div id="right">

		<div id="login_settings" class="bgstyle7">
			<div class="top_left"><div class="top_right"></div></div>
			<div class="content">
			<h2>Login Settings</h2>
			<ul class="blank">
				<li>
					<%= link_to "Change Password", :action => "password" %> <br />
					Change your password and login settings
				</li>
			</ul>
			</div>
			<div class="bottom_left"><div class="bottom_right"></div></div>
		</div>

		<div id="account" class="bgstyle7">
