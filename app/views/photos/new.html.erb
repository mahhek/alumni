<h1>New photo</h1>

<%= error_messages_for :photo %>

<% form_for(:photo, :url => photos_path,:html=>{:multipart => true } ) do |f| %>

  <p>
    Title:<br/> <%=f.text_field 'title' %>
  </p>
  <p>
    Description<br/><%=f.text_area 'body', :rows=>6, :cols=>40%>
  </p>
  <p>
    Photo: <br/> <%=f.file_field 'uploaded_data' %>
  </p>
    <input type="hidden" name="photo[priority]" value="2" />
  <p>
    <%= submit_tag "Create" %>
  </p>

<% end %>

<%= link_to 'Back', photos_path %>