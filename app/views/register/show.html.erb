<%= stylesheet_link_tag 'organization_registration' %>

<div class="registration_info_primary">
	
	<div class="registration_info">
		<h2>Org Information</h2>
		<ul>
			<li>Name: <strong><%= @registration.name %></strong></li>
			<li>Address: <strong><%= @registration.address %></strong></li>
			<li>Address: <strong><%= @registration.city %>, <%= @registration.state %> <%= @registration.zip %></strong></li>
			<li>Year Established: <strong><%= @registration.year_established %></strong></li>
			<li>Federal EIN: <strong><%= @registration.federal_ein %></strong></li>
			<% if @is_admin %>
			<li>Actions: <a href="/organizations/edit/<%= @registration.organization_id %>">Validate Org</a></li>
			<% end %>
		</ul>
	</div>
	
